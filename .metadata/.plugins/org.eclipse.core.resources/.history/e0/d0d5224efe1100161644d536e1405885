package practice;

public class TrapWater {
  public static void main(String arga[]){
	  int i=6;
	  int j=3;
	  int k[]={3,3,4,4,4,2,3,1,3,2,1,4,7,3,1,6,4,1};
	  GetWaterLevel(i,j,k);
	  
  }
  static int GetWaterLevel(int input1,int input2,int input3[])
  {
	  int row=input1;
	  int col=input2;
	  int arr[][]=MakeArray(input3,row,col);
	  for(int i=0;i<row;i++){
		  for(int j=0;j<col;j++){
			  System.out.println(arr[i][j]);
		  }
		  
	  }
	  for(int i=0;i<row;i++){
		  for(int j=0;j<col;j++){
			  int u,l,r,lo;
			  u=UpperBound(arr,i,j);
			  System.out.println(i+"  "+j);
			  lo=LowerBound(arr,i,j,row);
			  r=RightBound(arr,i,j,col);
			  l=LeftBound(arr,i,j);
			  
		  }
		  
	  }
  	return 1;
  }
  
  public static int UpperBound(int arr[][],int i,int j){
	  if(i==0) return 0;
	  else{
		  int min=Integer.MAX_VALUE;
		  for(int k=i;k<=0;k--){
			  if(arr[k][j]<min)
				  min=arr[k][j];
		  }
		  return min;
	  }

  }
  public static int LowerBound(int arr[][],int i,int j,int row){
	  if(i==row) return 0;
	  else{
		  int min=Integer.MAX_VALUE;
		  for(int k=i;k<=row;k++){     // go Down !!!!
			  if(arr[k][j]<min)
				  min=arr[k][j];
		  }
		  return min;
	  }

  }
  public static int LeftBound(int arr[][],int i,int j){
	  if(j==0) return 0;
	  else{
		  int min=Integer.MAX_VALUE;
		  for(int k=i;k>=0;k--){     // go left !!!!
			  if(arr[i][k]<min)
				  min=arr[i][k];
		  }
		  return min;
	  }

  }
  public static int RightBound(int arr[][],int i,int j,int col){
	  if(j==col) return 0;
	  else{
		  int min=Integer.MAX_VALUE;
		  for(int k=j;k<=col;k++){     // go right !!!!
			  if(arr[i][k]<min)
				  min=arr[i][k];
		  }
		  return min;
	  }

  }
  public static int[][] MakeArray(int in[],int row,int col){
	  int k=0;
	  int arr[][]=new int[row][col];
		  for(int i=0;i<row;i++){
			  for(int j=0;j<col;j++){
				  arr[i][j]=in[k++];
			  }
			  
		  }
		  return arr;
		  
		  
  }
  
}
